{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "yish",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "Yish",
        "width": 600,
        "height": 650
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.yish.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": {
        "./voicevox_core/model": "model",
        "./voicevox_core/voicevox_core.dll": "./",
        "./voicevox_core/onnxruntime.dll": "./",
        "./open_jtalk_dic_utf_8-1.11": "open_jtalk_dic_utf_8-1.11"
      }
    }
  }
}
